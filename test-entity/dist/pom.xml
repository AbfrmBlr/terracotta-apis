<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>test-entity</artifactId>
    <groupId>org.terracotta</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>test-entity-distribution</artifactId>

  <properties>
    <maven-forge-plugin.version>1.2.18</maven-forge-plugin.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.terracotta</groupId>
      <artifactId>test-entity-api</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <artifactId>test-entity-client</artifactId>
      <groupId>org.terracotta</groupId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.terracotta</groupId>
      <artifactId>test-entity-server</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.terracotta</groupId>
        <artifactId>maven-forge-plugin</artifactId>
        <executions>
          <execution>
            <id>process-client-embeddedjars</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>packageClusteredEntity</goal>
            </goals>
            <configuration>
              <serverArtifact>org.terracotta:test-entity-server:${project.version}</serverArtifact>
              <clientArtifact>org.terracotta:test-entity-client:${project.version}</clientArtifact>
              <apiArtifact>org.terracotta:test-entity-api:${project.version}</apiArtifact>
              <attachJavadoc>false</attachJavadoc>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
